{
  "name": "ezsports-app",
  "private": true,
  "version": "1.0.0",
  "description": "EZSportsApp root package for Render-hosted Express server",
  "scripts": {
    "start": "npm --prefix server run start",
    "dev": "npm --prefix server run dev",
    "init-db": "npm --prefix server run init-db",
    "db:stats": "npm --prefix server run db:stats",
    "db:backup": "npm --prefix server run db:backup",
    "db:reset": "npm --prefix server run db:reset",
    "products:sync": "node server/scripts/sync-products.js",
    "products:sync:dry": "node server/scripts/sync-products.js --dry --no-stripe",
    "prodlist:stripe:sync": "node server/scripts/sync-prodlist-stripe.js",
    "prodlist:stripe:sync:dry": "node server/scripts/sync-prodlist-stripe.js --dry",
    "screens:build": "node server/scripts/build-screens-catalog.js",
    "gloves:build": "node server/scripts/build-gloves-catalog.js",
    "prices:generate": "node scripts/generate-prices-md.js",
    "media:optimize": "node scripts/optimize-ezsports-content.js",
    "test": "jest --runInBand --testPathIgnorePatterns=tests/browser",
    "test:e2e": "jest --runInBand --verbose",
    "test:browser": "playwright test",
    "pw:install": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "dotenv": "^16.6.1",
    "ffmpeg-static": "^5.3.0",
    "heic-convert": "^2.1.0",
    "jest": "^29.7.0",
    "sharp": "^0.34.5",
    "supertest": "^7.1.4",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^16.0.0"
  }
}
