### Production environment (Render)
### Minimal set of env vars this app needs in production.

# Base URL + proxy/HTTPS
APP_BASE_URL=https://ezsportsnetting.com
TRUST_PROXY=1
FORCE_HTTPS=true

# CORS allowlist (comma-separated)
CORS_ORIGINS=https://ezsportsnetting.com,https://www.ezsportsnetting.com,https://admin.ezsportsnetting.com

# Auth / cookies
JWT_SECRET=
JWT_ISS=ezsports
JWT_AUD=ezsports-apps
COOKIE_DOMAIN=.ezsportsnetting.com
COOKIE_SECURE=true
COOKIE_SAMESITE=None

# Stripe (live keys in production)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_API_VERSION=2022-11-15

# Stripe Automatic Tax is OFF for this setup
STRIPE_TAX_AUTOMATIC=false

# Stripe Connect (destination charges)
# Keep disabled until you switch to the Stripe platform (SD) keys.
STRIPE_CONNECT_ENABLED=false
STRIPE_CONNECT_DESTINATION_ACCOUNT=
STRIPE_PLATFORM_FEE_BPS=150
# Connect test mode: compute/report split but DO NOT send transfer_data/application_fee.
STRIPE_CONNECT_PREVIEW_ONLY=false

# Safety
ALLOW_TEST_CHECKOUT=false

# Email delivery (MailChannels via Cloudflare Worker)
MAIL_FROM=no-reply@ezsportsnetting.com
MAIL_FROM_NAME=EZ Sports Netting
CF_EMAIL_WEBHOOK_URL=
CF_EMAIL_API_KEY=

# Optional: email debugging
EMAIL_DEBUG=false

# Contact form inbox + internal paid-order notifications
CONTACT_INBOX=info@ezsportsnetting.com
ORDER_NOTIFY_TO=hligon@getsparqd.com

# Alerting + finance report delivery
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_TO=hligon@getsparqd.com
ALERT_DEDUPE_MINUTES=10

# Finance report scheduler (UTC)
FINANCE_REPORT_ENABLED=true
FINANCE_REPORT_TIME_UTC=09:15

# Optional: daily activity report scheduler (UTC or local time + TZ)
DAILY_REPORT_ENABLED=false
# DAILY_REPORT_TIME_UTC=09:00
# DAILY_REPORT_TZ=America/Indianapolis
# DAILY_REPORT_TIME_LOCAL=07:00

# Optional: Maintenance mode
MAINTENANCE=false

# Optional: Cloudflare Turnstile (contact/subscribe forms)
# Site key is used by the frontend JS; secret is used by the server to verify tokens.
TURNSTILE_SITE_KEY=
CF_TURNSTILE_SECRET=
TURNSTILE_BYPASS=false

# Optional: Google Maps (used for address helpers)
GOOGLE_MAPS_API_KEY=

# Optional: Marketing Apps Script integration
MARKETING_APPS_SCRIPT_URL=

# Optional: Cloudflare admin helpers (used by /api/admin/cloudflare/* endpoints)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
# CLOUDFLARE_ACCOUNT_ID=