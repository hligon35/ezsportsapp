APP_BASE_URL=https://ezsportsnetting.com
TRUST_PROXY=1
FORCE_HTTPS=true

# Optional server port (Render provides PORT automatically)
# PORT=4242

# CORS allowlist (comma-separated)
# Include your storefront + admin dashboard origins.
# Add your Render service URL during rollout if needed.
CORS_ORIGINS=https://ezsportsnetting.com,https://www.ezsportsnetting.com,https://admin.ezsportsnetting.com

# Auth / cookies
JWT_SECRET=
JWT_ISS=ezsports
JWT_AUD=ezsports-apps
COOKIE_DOMAIN=.ezsportsnetting.com
COOKIE_SECURE=true
COOKIE_SAMESITE=None

# Stripe
# - For local/dev use test keys: pk_test_*, sk_test_*
# - For production use live keys: pk_live_*, sk_live_*
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional: pin Stripe API version used by the SDK
STRIPE_API_VERSION=2022-11-15

# Optional: enable Stripe automatic tax (requires Stripe Tax configured)
# STRIPE_TAX_AUTOMATIC=true

# Taxes (optional)
# TAX_RATES_JSON={"US":{"GA":0.07}}
# TAX_RATES=GA:0.07

# Email (choose one: SendGrid API or SMTP)
SENDGRID_API_KEY=

# Recommended: verified sender identity (SendGrid Sender Authentication)
SENDGRID_FROM=no-reply@ezsportsnetting.com
MAIL_FROM_NAME=EZ Sports Netting

SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
# For SendGrid SMTP, username should be: apikey
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@ezsportsnetting.com

# Optional email debug + timeouts
# EMAIL_DEBUG=false
# SENDGRID_HTTP_TIMEOUT_MS=4000
# EMAIL_HTTP_TIMEOUT_MS=2500

# Optional: Cloudflare email worker relay
CF_EMAIL_WEBHOOK_URL=
CF_EMAIL_API_KEY=

# Optional: Cloudflare Access (service token) protecting your worker
CF_ACCESS_CLIENT_ID=
CF_ACCESS_CLIENT_SECRET=

CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# Google Maps (optional)
GOOGLE_MAPS_API_KEY=

# Marketing Apps Script (optional)
MARKETING_APPS_SCRIPT_URL=

# Contact + subscribe inbox (marketing routes)
CONTACT_INBOX=info@ezsportsnetting.com

# Cloudflare Turnstile (optional, contact form)
CF_TURNSTILE_SECRET=
# TURNSTILE_BYPASS=false

# Safety
ALLOW_TEST_CHECKOUT=false

# Maintenance mode (optional)
# MAINTENANCE=true
# COMING_SOON=true

# Startup automation
AUTOSYNC_PRODUCTS=0
AUTOSYNC_STRIPE=0

# Monitoring (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Error reporting rate limit (client -> server)
ERROR_REPORT_RATE_LIMIT_PER_MIN=30

# Alerting + daily reports (email)
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_TO=
# ALERT_EMAIL_FROM=no-reply@ezsportsnetting.com
ALERT_DEDUPE_MINUTES=10

DAILY_REPORT_ENABLED=false
# DAILY_REPORT_TIME_UTC=09:00
# DAILY_REPORT_TZ=America/Indianapolis
# DAILY_REPORT_TIME_LOCAL=07:00

# Address validation (optional)
ADDRESS_VALIDATION_ENABLED=false
ADDRESS_VALIDATION_PROVIDER=none
ADDRESS_VALIDATION_TIMEOUT_MS=3000
SMARTY_AUTH_ID=
SMARTY_AUTH_TOKEN=

# External shipping (scaffold only)
SHIPPING_PROVIDER_ENABLED=false
SHIPPING_PROVIDER=none
EASYPOST_API_KEY=
SHIPPO_API_TOKEN=

# Admin creation script (optional)
# ADMIN_EMAIL=
# ADMIN_USERNAME=
# ADMIN_NAME=
# ADMIN_PASSWORD=
# ADMIN_IS_ADMIN=true